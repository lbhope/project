<com.example.customui.view.scroll.VerticalLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_main_ly"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_dark" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFccFF"
            android:gravity="center"
            android:text="hello"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FF22FF"
            android:gravity="center"
            android:text="hello"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#aaccFF"
            android:gravity="center"
            android:text="hello"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </RelativeLayout>

</com.example.customui.view.scroll.VerticalLinearLayout>